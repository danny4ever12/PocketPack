 

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/mainback"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mipocket.pocket.DailyExpense" >

    <Button
        android:id="@+id/dbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forgt_shape_color"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/add_expense" />

    <Button
        android:id="@+id/gotobn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/totall"
        android:background="@drawable/forgt_shape_color"
        android:layout_alignParentRight="true"
        android:text="@string/previous_days_expenses" />

    <TextView
        android:id="@+id/totall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dbn"
        android:layout_below="@+id/dbn"
        android:text="@string/hello_world"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/totall" >
    </ListView>
    
</RelativeLayout>
